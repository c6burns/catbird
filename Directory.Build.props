<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <SlnDir Condition="$(SlnDir) == ''">$(MSBuildThisFileDirectory)</SlnDir>
        <!-- <SlnDir Condition="!HasTrailingSlash($(SlnDir))">$(SlnDir)/</SlnDir> -->
        <SdkDir Condition="$(SdkDir) == ''">$(MSBuildExtensionsPath)</SdkDir>
        <!-- <SdkDir Condition="!HasTrailingSlash($(SdkDir))">$(SdkDir)/</SdkDir> -->

        <DefineConstants Condition="$(OS) == 'Windows_NT'">$(DefineConstants);CB_PLATFORM_WINDOWS;CB_SOCKAPI_WINSOCK</DefineConstants>
        <DefineConstants Condition="$(OS) == 'Unix'">$(DefineConstants);CB_PLATFORM_WINDOWS;CB_SOCKAPI_POSIX</DefineConstants>
        <DefineConstants Condition="$(OS) == 'OSX'">$(DefineConstants);CB_PLATFORM_WINDOWS;CB_SOCKAPI_POSIX</DefineConstants>

        <PluginDir Condition="$(PluginDir) == ''">$(SlnDir)UnityProject/Assets/catbird/Plugins/</PluginDir>
        <PluginArchDir Condition="$(PluginArchDir) == ''">x86_64/</PluginArchDir>
        <PluginName Condition="$(PluginName) == ''">catbird</PluginName>
        <PluginPrefix Condition="$(PluginPrefix) == '' AND $(OS) != 'Windows_NT'">lib</PluginPrefix>
        <PluginSuffix Condition="$(PluginExt) == '' AND $(OS) == 'Windows_NT'">.dll</PluginSuffix>
        <PluginSuffix Condition="$(PluginExt) == '' AND $(OS) == 'Unix'">.so</PluginSuffix>
        <PluginSuffix Condition="$(PluginExt) == '' AND $(OS) == 'OSX'">.dylib</PluginSuffix>
        <PluginBinary Condition="$(PluginBinary) == ''">$(PluginPrefix)$(PluginName)$(PluginSuffix)</PluginBinary>
        <PluginFullPath Condition="$(PluginPath) == ''">$(PluginDir)$(PluginArchDir)$(PluginBinary)</PluginFullPath>
    </PropertyGroup>

</Project>
